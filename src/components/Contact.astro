---
import ContactForm from "./ContactForm";
---

<section
  id="contact"
  class="flex flex-col w-full h-full justify-center pb-12 lg:pb-0 md:pt-64 lg:pt-16 bg-slate-900 dark:bg-slate-50 border-t border-slate-200 dark:border-slate-700"
>
  <div class="flex flex-col mx-auto gap-8 lg:gap-4 md:gap-16 mt-32 lg:mt-0">
    <div class="flex gap-2 items-center justify-center">
      <h2
        class="text-center text-2xl md:text-3xl font-bold dark:text-slate-800 text-slate-100"
      >
        Asesoramiento sin cargo
      </h2>
      <img
        src="./logo_png.webp"
        class="hidden md:flex h-16 w-16 rounded-full"
        alt="logo"
      />
    </div>
    <ContactForm client:load />
  </div>
</section>
