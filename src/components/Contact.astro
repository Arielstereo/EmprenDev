---
import ContactForm from "./ContactForm";
---

<section
  id="contact"
  class="flex flex-col w-full h-screen justify-center pt-80 pb-12 lg:pb-0 lg:pt-32"
>
  <div class="flex flex-col lg:flex-row mx-auto gap-8 lg:gap-4 md:gap-16">
    <div class="flex lg:flex-col gap-4 lg:gap-24 justify-center items-center">
      <h4 class="text-center text-4xl md:text-6xl">Asesoramiento sin cargo</h4>
      <img class="w-16 h-16 lg:w-32 lg:h-32" src="/logo.png" alt="logo">
    </div>
    <ContactForm client:load />
  </div>
</section>
