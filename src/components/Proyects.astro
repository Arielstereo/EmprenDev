---
const { title, id, img, url, description } = Astro.props;
---

<section
  id={id}
  class="h-full lg:h-screen py-32 lg:pt-32 flex flex-col-reverse lg:flex-row gap-4 md:gap-12"
>
  <div class="mt-4 z-10 flex flex-col gap-8">
    <a href={url} target="_blank">
      <img
        class="cursor-pointer rounded-xl hover:animate-pulse w-fit object-cover lg:w-[600px] h-[200px] lg:h-[400px]"
        src={img}
        alt="landingPage"
      />
    </a>
  <div class="flex flex-col items-center gap-4">
    <svg class="animate-bounce" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><g fill="none" stroke="#333333" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M8 13V4.5a1.5 1.5 0 0 1 3 0V12m0-.5v-2a1.5 1.5 0 0 1 3 0V12m0-1.5a1.5 1.5 0 0 1 3 0V12"/><path d="M17 11.5a1.5 1.5 0 0 1 3 0V16a6 6 0 0 1-6 6h-2h.208a6 6 0 0 1-5.012-2.7L7 19q-.468-.718-3.286-5.728a1.5 1.5 0 0 1 .536-2.022a1.87 1.87 0 0 1 2.28.28L8 13M5 3L4 2m0 5H3m11-4l1-1m0 4h1"/></g></svg>
    <span class="text-sm font-black text-center md:text-lg text-slate-900">Haz click en la imagen para ver m√°s!</span>
  
  </div>
  </div>
  <div class="w-full h-fit md:w-[600px] bg-gradient-to-r from-blue-600 to-blue-800 rounded-lg pb-16 px-8 relative">
    <h3 class="text-4xl md:text-6xl text-center text-white py-8">
      {title}
    </h3>
    <p class="text-slate-100 text-start">
      {description}
    </p>
    <div class="absolute bottom-0 right-1">
      <a
      class="text-lg text-black rounded-md shadow-lg shadow-black hover:animate-pulse py-4 px-16 bg-white hover:bg-slate-800 hover:text-white"
      href="#contact"
    >
      Contactanos
    </a>
    </div>
  </div>
</section>
