---
const { title, id, img, url, description } = Astro.props;
---

<section
  id={id}
  class="h-full md:h-screen py-4 md:py-24 px-4 md:px-32 flex flex-col-reverse lg:flex-row gap-4 md:gap-12"
>
  <div class="py-6 md:mt-0 z-10">
    <a href={url} target="_blank">
      <img
        class="cursor-pointer rounded-xl hover:animate-pulse w-fit object-cover lg:w-[600px] h-2/3 lg:h-full"
        src={img}
        alt="landingPage"
      />
    </a>
  </div>
  <div class="w-full md:w-[600px]">
    <h3 class="text-4xl md:text-6xl text-center text-black pt-16 md:pt-8">
      {title}
    </h3>
    <p class="text-slate-800 text-md md:text-lg pt-4 text-center md:text-start">
      {description}
    </p>
    <div class="pt-8 flex justify-center">
      <a
        class="font-black text-lg text-white rounded-md shadow-lg shadow-black hover:animate-pulse p-4 bg-green-500 hover:bg-green-400"
        href="#contact"
      >
        Contactanos
      </a>
    </div>
  </div>
</section>
