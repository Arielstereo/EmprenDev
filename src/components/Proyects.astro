---
const { title, id, img, url, description } = Astro.props;
---

<section
  id={id}
  class="h-full lg:h-screen py-32 lg:pt-32 flex flex-col-reverse lg:flex-row gap-4 md:gap-12"
>
  <div class="mt-4 z-10 flex flex-col gap-8">
    <a href={url} target="_blank">
      <img
        class="cursor-pointer rounded-xl hover:animate-pulse w-fit object-cover lg:w-[600px] h-[200px] lg:h-[400px]"
        src={img}
        alt="landingPage"
      />
    </a>
  <div class="flex flex-col items-center gap-4">
    <span class="text-sm font-black text-center md:text-lg text-slate-900 dark:text-slate-100">Haz click en la imagen para ver m√°s!</span>
    </div>
  </div>
  <div class="w-full h-fit md:w-[600px] bg-gradient-to-r from-blue-600 to-blue-800 rounded-lg pb-16 px-8 relative">
    <h3 class="text-4xl md:text-6xl text-center text-white py-8">
      {title}
    </h3>
    <p class="text-slate-100 text-start">
      {description}
    </p>
    <div class="absolute bottom-0 right-1">
      <a
      class="text-lg text-black rounded-md shadow-lg shadow-black hover:animate-pulse py-4 px-16 bg-white hover:bg-slate-800 hover:text-white"
      href="#contact"
    >
      Contactanos
    </a>
    </div>
  </div>
</section>
