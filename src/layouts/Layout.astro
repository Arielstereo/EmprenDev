---
const { title } = Astro.props;
import "@fontsource-variable/orbitron";
import "@fontsource/kanit";
import "@fontsource/paytone-one";
import "@fontsource-variable/rubik";
import Navbar from "@components/Navbar";
import NavbarMobile from "@components/NavbarMobile";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="google-site-verification"
      content="qGCnmT790OHmqDOzts3TDjYJ0jSRQRscQHJHb_hSeIM"
    />
    <meta
      name="description"
      content="Desarrollo y diseño de páginas web profesionales para emprendedores, pymes y pequeños negocios. Aumenta tu presencia online y atrae más clientes con un sitio web moderno y personalizado."
    />
    <meta
      name="keywords"
      content="desarrollo web, diseño web, páginas web, emprendedores, pymes, pequeños negocios, sitios web, presencia online"
    />
    <meta name="author" content="EmprenDev" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />

    <script
      is:inline
      src="https://cdn.botpress.cloud/webchat/v3.2/inject.js"
      defer></script>
    <script
      is:inline
      src="https://files.bpcontent.cloud/2025/07/28/23/20250728230027-KPGIXL9V.js"
      defer></script>
    <script>
      if ("serviceWorker" in navigator) {
        window.addEventListener("load", () => {
          navigator.serviceWorker.register("/sw.js");
        });
      }
    </script>
  </head>
  <body>
    <div class="hidden md:block">
      <Navbar client:load />
    </div>
    <div class="block md:hidden">
      <NavbarMobile client:load />
    </div>
    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
  }
  html {
    scroll-behavior: smooth;
  }

  a,
  span,
  button {
    font-family: "Orbitron Variable", sans-serif;
  }
  p,
  label {
    font-family: "Kanit", sans-serif;
  }
  h1,
  h2 {
    font-family: "Paytone One", sans-serif;
  }
  h3 {
    font-family: "Rubik Variable", sans-serif;
  }
  .glass {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(2, 6, 23, 0.06);
  }

  /* If you use Tailwind's class-based dark mode */
  .dark .glass {
    background: hsl(220 22% 14% / 0.4);
    border: 1px solid hsl(217 91% 55% / 0.15);
  }
  .dark .glass-card {
    background: hsl(220 22% 18% / 0.5);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid hsl(217 91% 55% / 0.2);
    box-shadow: 0 10px 40px -10px hsl(217 91% 55% / 0.3);
  }
  .glass-card {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid hsl(217 91% 55% / 0.2);
    box-shadow: 0 10px 40px -10px hsl(217 91% 55% / 0.3);
  }
  body {
    background-color: #f8fafc;
  }
  .dark body {
    background-color: #1a212d;
  }
  .gradient-blue {
    background: linear-gradient(135deg, hsl(217 91% 55%), hsl(210 100% 60%));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Section heading sizes are managed with Tailwind classes on each
     component. Removed the temporary global overrides to rely only on
     utility classes. */
</style>
