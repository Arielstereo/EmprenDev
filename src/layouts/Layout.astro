---
const { title } = Astro.props;
import Background from "@components/Background.astro";
import "@fontsource-variable/orbitron";
import "@fontsource/kanit";
import "@fontsource/paytone-one";
import "@fontsource-variable/rubik";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Desarrollo de páginas web para eventos y emprendedores. Diseños atractivos y modernos a tu medida, ideales para fiestas, y para atraer a más clientes. ¡Haz que tu evento brille en la web o crezcan tus ventas!">
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <Background />
    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
  }
  html {
    scroll-behavior: smooth;
  }
  a,
  span,
  h2,
  button {
    font-family: "Orbitron Variable", sans-serif;
  }
  p, label {
    font-family: "Kanit", sans-serif;
  }
  h1,
  h4 {
    font-family: "Paytone One", sans-serif;
  }
  h3 {
    font-family: "Rubik Variable", sans-serif;
  }
</style>
